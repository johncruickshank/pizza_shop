<form action="/pizzas/<%= @pizza.id %>" method="POST">
  <label for="firstName">First Name:</label>
  <input type="text" required="required" name="first_name" id="firstName" value=<%=@pizza.first_name %> />

  <label for="lastName">Last Name:</label>
  <input type="text" required="required" name="last_name" id="lastName" value=<%=@pizza.last_name %> />

  <label for="pizzaSelect">Select a pizza:</label>
  <select name="topping" id="pizzaSelect">
    <option value="Scrummy">Scrummy</option>
    <option value="Strawberry">Strawberry</option>
  </select>

  <label for="quantity">Quantity</label>
  <input type="number" min=1 max=99 name="quantity" id="quantity" value=<%=@pizza.quantity %>/>

  <input type="submit" value="Submit">
</form>
